// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    location        "system";
    object          controlDict;
}

isoAdvection    1;

application     myCustomSolver;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         0.02;

deltaT          1e-09;

writeControl    adjustableRunTime;

writeInterval   1e-05;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression no;

timeFormat      general;

timePrecision   9;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.3;

maxAlphaCo      0.3;

maxDeltaT       1e-05;

maxDi           1;

maxCapillaryNum 0.2;

libs            ( "libpostProcess.so" "libfluidThermo.so" "libsolverFunctionObjects.so" );

functions
{
    limitUFields
    {
        type            limitFields;
        libs            ( fieldFunctionObjects );
        fields          ( U );
        limit           max;
        max             0.0394974;// this actual value is the last entered in the simulation at the final timeStep.
        region          fluid;
        enabled         true;
        log             true;
        timeStart       0;
        timeEnd         1000;
        executeControl  timeStep;
        executeInterval 1;
        writeControl    adjustableRunTime;
        writeInterval   25;
    }
    limitp_rghFields
    {
        type            limitFields;
        libs            ( fieldFunctionObjects );
        fields          ( p_rgh );
        limit           min;
        min             98332;
        region          fluid;
        enabled         true;
        log             true;
        timeStart       0;
        timeEnd         1000;
        executeControl  timeStep;
        executeInterval 1;
        writeControl    adjustableRunTime;
        writeInterval   25;
    }
    solverInfo
    {
        type            solverInfo;
        libs            ( "libutilityFunctionObjects.so" );
        fields          ( U p_rgh );
        writeResidualFields yes;
        executeControl  timeStep;
        executeInterval 1;
        writeControl    adjustableRunTime;
        writeInterval   100;
        region          fluid;
    }
}


